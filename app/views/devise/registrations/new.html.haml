.page-header
  %h1 Register

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .row
    .col-md-8
      %p
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, class: 'form-control', style: 'width: 40%'
      %p
        = f.label :username
        %br/
        = f.text_field :username, class: 'form-control', style: 'width: 40%'
      %p
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "off", class: 'form-control', style: 'width: 30%'
      %p
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', style: 'width: 30%'
      %p
        %div= f.submit "Register", class: 'btn btn-primary'
    .col-md-4
      %ul.nav.nav-pills.nav-stacked
        %li= link_to 'Login', new_user_session_path
        %li= link_to 'Home', root_path
