- content_for :head do
  %meta{:content => "Voting for #{@server.title}", :name => "description"}
  %meta{:content => "Servers, Unturned, Server, Vote", :name => "keywords"}
  %meta{:content => "#{@server.user.username}", :name => "author"}
- content_for :title do 'Voting' end
.page-header
  %h1
    Voting for:
    %small
      = @server.title
    .pull-right
      .btn-group
        = link_to 'Back', @server, class: 'btn btn-danger'

= form_tag server_cast_vote_path(@server), method: 'post' do
  %p
    .form-inline
      .text-center
        = text_field :form, :captcha, :placeholder => 'What is the main enemy in Unturned?', class: 'form-control', style: 'width: 25%'
        = submit_tag 'Vote', class: 'btn btn-primary', data: { disable_with: "Voting..." }
        .help-block Enter the name of the main enemy in Unturned to vote.
